<resources>
    <declare-styleable name="PinputView">
        <attr name="pinputview_len" format="integer" />
        <attr name="pinputview_foregroundColor" format="color" />
        <attr name="pinputview_backgroundColor" format="color" />
        <attr name="pinputview_characterPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="PinKeyboardView">
        <attr name="pinkeyboardview_keyBackground" format="integer" />
        <attr name="pinkeyboardview_textColor" format="color" />
        <attr name="pinkeyboardview_textSize" format="dimension" />
        <attr name="pinkeyboardview_showUnderline" format="boolean" />
        <attr name="pinkeyboardview_underlinePadding" format="dimension" />
        <attr name="pinkeyboardview_keyUnderlineColor" format="color" />
    </declare-styleable>
</resources>
